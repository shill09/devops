pipeline {
    agent any

    stages {
        stage('Install Dependencies') {
            steps { 
                sh 'echo "installing application dependencies..."'
            }
        }
        stage('Test') { 
            steps { 
                sh 'echo "testing application..."'
            }
        }
        stage('Deploy Application') { 
            steps { 
                sh 'echo "deploying application..."'
            }
        }
    }
}
